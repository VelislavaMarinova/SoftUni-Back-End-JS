    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form  method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{cryptoOfferData.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{cryptoOfferData.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{cryptoOfferData.price}}">
                <label>Description:</label>
                <textarea name="description"
                    id="description">{{cryptoOfferData.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    {{#each paymentMethods}}
                    {{!-- <option value="{{value}}" {{#if selected}}selected{{/if}}>{{value}} - {{textContent}}</option> --}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.textContent}}</option>
                    {{/each}}
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>