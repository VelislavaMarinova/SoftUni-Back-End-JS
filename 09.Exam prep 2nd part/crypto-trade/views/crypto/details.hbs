<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{oneCryptoOffer.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{oneCryptoOffer.name}}</h1>
                <h3 id="payment">Payment method: {{oneCryptoOffer.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{oneCryptoOffer.price}}</span></p>
                <p id="description">{{oneCryptoOffer.description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isAutenticated}}
                {{#if isOwner}}
                <div class="author">
                    <a href="#" class="btn-edit">Edit</a>
                    <a href="#" class="btn-delete">Delete</a>
                </div>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                <a href="/crypto/{{oneCryptoOffer._id}}/buy" class="btn-buy">Buy</a>

                {{/if}}

                {{/if}}

                <!-- Logged in user who has already buy this crypto-->
                {{!-- <p class="buy-message">You already bought these crypto coins.</p> --}}
            </div>
        </div>
    </section>
</main>