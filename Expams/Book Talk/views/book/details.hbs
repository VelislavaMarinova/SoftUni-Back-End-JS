<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{selectedBookReview.title}}</h2>
            <h3>Author: {{selectedBookReview.author}}</h3>
            <h3>Stars: {{selectedBookReview.stars}}</h3>
            <h3>Genre: {{selectedBookReview.genre}}</h3>
            <h3>Review: {{selectedBookReview.bookReview}}</h3>

            <!-- If there is no registered user, do not display buttons-->
            {{#if isAutenticated}}
            <div class="buttons">
                <!-- Only for registered user and author of the review -->
                {{#if isOwner}}
                <a href="/book/{{selectedBookReview._id}}/edit" class="btn-edit">Edit</a>
                <a href="/book/{{selectedBookReview._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                <!-- logged in user who has not yet wished book-->
                <a href="#" class="btn-wish">Wish to read</a>
                <!-- logged in user who has already wished book-->
                <p class="wish-pub">You already added the book to your wish list</p>
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{selectedBookReview.image}}">
        </article>

    </article>
</section>