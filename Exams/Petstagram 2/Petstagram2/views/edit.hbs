<!-- Start Add Photo Section -->
<div class="editPage">
    <h2>Edit photo</h2>
    <!-- Start Add Photo Form -->
    <form method="post">
        <p>
            <input type="text" name="name" placeholder="Name" value="{{photoData.name}}">
        </p>

        <p>
            <input type="number" name="age" placeholder="Age" value="{{photoData.age}}">
        </p>

        <p>
            <textarea type="text" name="description" placeholder="Description">{{photoData.description}}</textarea>
        </p>

        <p>
            <input type="text" name="location" placeholder="Location" value="{{photoData.location}}">
        </p>

        <p>
            <input type="text" name="imageUrl" placeholder="Link to image" value="{{photoData.imageUrl}}">
        </p>
        <!-- Add Photo Button -->
        <button class="edit-btn" type="submit">Edit Photo</button>
    </form>
</div>