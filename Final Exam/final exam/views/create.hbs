<main class="create">
    <!-- Create Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="post" >
                <input type="text" name="name" id="name" placeholder="Name" value="{{body.name}}"/>
                <input type="text" name="years" id="years" placeholder="Years" value="{{body.years}}"/>
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{body.kind}}"/>
                <input type="text" name="imageUrl" id="animal-img" placeholder="Image url" value="{{body.imageUrl}}"/>
                <input type="text" name="needs" id="needs-of" placeholder="Needs of" value="{{body.needs}}"/>
                <input type="text" name="location" id="location" placeholder="Location" value="{{body.location}}"/>
                <textarea id="description" placeholder="Description..." name="description">{{body.description}}</textarea>

                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>